<Application x:Class="WinApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WinApp"
             xmlns:vst="clr-namespace:Vst.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="vst:Button">
            <Setter Property="Background" Value="#02733E" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="MinWidth" Value="60" />
            <Setter Property="Margin" Value="2" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1" />
                </Trigger>
            </Style.Triggers>

        </Style>
        <Style TargetType="vst:MenuButton">
            <Setter Property="Foreground" Value="#295f2d" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="10 3" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFF" />
                    <Setter Property="Background" Value="#295f2d" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="vst:SideMenu">
            <Setter Property="Margin" Value="0 5" />
        </Style>
        <Style TargetType="vst:SideMenuCaption">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#295f2d" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="5" />

        </Style>
        <Style TargetType="vst:SideMenuButton">
            <Setter Property="Background" Value="#00624BFF" />
            <Setter Property="Foreground" Value="#02733E" />
            <Setter Property="FontSize" Value="14" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFF" />
                    <Setter Property="Background" Value="#02733E" />
                    <Setter Property="Opacity" Value="1" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="vst:VerticalMenu">
            <Setter Property="Background" Value="#ffd154" />
            <Setter Property="Padding" Value="20 10" />
        </Style>
        <Style TargetType="vst:TableHeaderCell">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="#588157" />
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="#CCC" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="vst:TableCell">
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="#CCC" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="vst:TableView">
            <Setter Property="Background" Value="#FCF0CF" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="RowOverBackground" Value="#b6da9f" />
        </Style>
        <Style TargetType="vst:EditorFrame">
            <Setter Property="Padding" Value="10 7" />
            <Setter Property="BorderRadius" Value="10" />
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="Foreground" Value="#02733E" />
            <Setter Property="BorderBrush" Value="#CCC" />
            <Style.Triggers>
                <Trigger Property="Activated" Value="True">
                    <Setter Property="BorderBrush" Value="Orange" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="vst:EditorLabel">
            <Setter Property="Margin" Value="6 0" />
            <Setter Property="Foreground" Value="#02733E" />
        </Style>
        <Style TargetType="vst:Placeholder">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Opacity" Value="0.4" />
        </Style>
        <Style TargetType="vst:FormControl">
            <Setter Property="Padding" Value="5 0 5 20" />
        </Style>
    </Application.Resources>
</Application>
